<div class="row">
  {{#if error}}
  <div class="alert alert-danger" role="alert">{{error}}</div>
  {{/if}}
  <h4 class="title">New author</h4>
  <form class="form-horizontal" {{action 'save' on='submit'}}>
    <div class="form-group">
      <label for="lastName" class="col-sm-2 control-label">Last name *</label>
      <div class="col-sm-8">
        <input required="required" name="lastName" type="text" class="form-control" maxlength="128">
      </div>
    </div>
    <div class="form-group">
      <label for="firstName" class="col-sm-2 control-label">First name *</label>
      <div class="col-sm-8">
        <input required="required" name="firstName" type="text" class="form-control" maxlength="128">
      </div>
    </div>
    <div>
      <button type="submit" class="btn btn-primary">Save</button>
    </div>
  </form>
</div>