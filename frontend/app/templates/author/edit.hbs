<h4 class="title">Edit author</h4>
{{#link-to 'author.index'}}Cancel{{/link-to}}
<form class="form-horizontal" {{action 'save' on='submit'}}>
  <div>
    <b>Last name:</b>
    <span>{{input value=lastName required="required"}}</span>
  </div>
  <div>
    <b>First name:</b>
    <span>{{input value=firstName required="required"}}</span>
  </div>
    <button type="submit">Save</button>
    <button {{action 'delete'}}>Delete</button>
  <div>
  </div>
</form>
<br>
<fieldset>
  <legend>Books:</legend>
  <ul>
    {{#each books}}
      <li>{{this.title}}, ISBN: {{this.isbn}} <button {{action 'removeBook' this.id}}>Remove</button></li>
    {{/each}}
  </ul>
  <button {{action 'addBook' id}}>Add new</button>
</fieldset>
